FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# Create working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy your application code
COPY . .

# Expose port 10000
EXPOSE 10000

# Run your app
CMD ["python", "start.py"]
